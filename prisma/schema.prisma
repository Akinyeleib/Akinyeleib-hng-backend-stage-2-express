generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    String @id @default(uuid())
  email     String @unique
  firstName String
  lastName  String
  password  String
  phone     String?
  organisations Organisation[]
}

model Organisation {
  orgId           String @id @default(uuid())
  name            String
  description     String? 
  users           User[]
}
